<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/bg_bottom_sheet"
    android:id="@+id/bottom_sheet_filter"
    android:orientation="vertical"
    android:paddingStart="46dp"
    android:paddingEnd="31dp"
    tools:context=".presentation.fragment.FilterBottomSheetFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/go_back"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_weight="1"
            android:src="@drawable/ic_x"
            android:background="@drawable/ripple_go_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mark_pro_five"
            android:text="@string/filter_options"
            android:layout_weight="30"
            android:gravity="center"
            android:textColor="@color/new_black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/done"
            android:layout_width="86dp"
            android:layout_height="37dp"
            android:textAllCaps="false"
            android:fontFamily="@font/mark_pro_five"
            android:text="@string/done"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/new_white"
            android:layout_weight="1"
            android:background="@drawable/filter_ripple_button"/>


    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mark_pro_five"
        android:text="@string/brand"
        android:textColor="@color/new_black"
        android:textSize="@dimen/text_size_20" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:entries="@array/brand"
        android:layout_marginVertical="6dp"
        android:background="@drawable/bg_spinner"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/price"
        android:fontFamily="@font/mark_pro_five"
        android:textColor="@color/new_black"
        android:textSize="@dimen/text_size_20"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:entries="@array/price"
        android:layout_marginVertical="6dp"
        android:background="@drawable/bg_spinner"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/size"
        android:fontFamily="@font/mark_pro_five"
        android:textColor="@color/new_black"
        android:textSize="@dimen/text_size_20" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:entries="@array/size"
        android:layout_marginVertical="6dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/bg_spinner"/>

</LinearLayout>